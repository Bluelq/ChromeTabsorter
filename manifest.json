{
  "manifest_version": 3,
  "name": "TabSorter AI",
  "version": "1.1.0",
  "description": "Intelligent tab organization with AI-powered categorization and smart grouping",
  
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "contextMenus",
    "alarms",
    "bookmarks"
  ],
  
  "host_permissions": ["<all_urls>"],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Open TabSorter popup"
    },
    "sort_tabs": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Sort tabs immediately"
    },
    "preview_changes": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Preview tab organization"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "data/*.json",
        "styles/*.css",
        "components/*.js",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}