{
  "manifest_version": 3,
  "name": "TabSorter AI",
  "version": "2.0.0",
  "description": "AI-powered tab sorting using semantic embeddings",
  
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "scripting",
    "offscreen"
  ],
  
  "host_permissions": ["<all_urls>"],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "commands": {
    "sort-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Sort all tabs"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "ai/*",
        "ai/models/*",
        "ai/models/Xenova/*",
        "ai/models/Xenova/all-MiniLM-L6-v2/*",
        "ai/models/Xenova/all-MiniLM-L6-v2/config.json",
        "ai/models/Xenova/all-MiniLM-L6-v2/model_quantized.onnx",
        "ai/models/Xenova/all-MiniLM-L6-v2/special_tokens_map.json",
        "ai/models/Xenova/all-MiniLM-L6-v2/tokenizer_config.json",
        "ai/models/Xenova/all-MiniLM-L6-v2/tokenizer.json",
        "ext/libs/*",
        "ext/libs/ort.min.js",
        "ext/libs/ort-wasm.wasm",
        "ext/libs/ort-wasm-threaded.wasm",
        "ext/libs/ort-wasm-simd.wasm",
        "offscreen.html",
        "ai/ort-paths.js",
        "ai/offscreen-onnx-local.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
